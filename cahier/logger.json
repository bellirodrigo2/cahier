{
    "version": 1,
    "disble_existing_loggers": false,
    "formatters": {
        "simple": {
            "format": "%(levelname)s: %(message)s"
        },
        "detailed": {
            "format": "",
            "datefmt": ""
        }
    },
    "handlers": {
        "stderr": {
            "class": "logging.StreamHandler",
            "level": "WARNING",
            "formatter": "simple",
            "stream": "ext://sys.stderr"
        },
        "file":{
            "class": "logging.handlers.RotatingFileHandler",
            "level": "DEBUG",
            "formatter":"detailed",
            "filename": "logs/cahier.log",
            "maxBytes": 1000000,
            "backupCount": 3
        }
    },
    "loggers": {
        "root": {
            "level": "DEBUG", 
            "handlers": [
                "stdout"
            ]
        }
    }
}